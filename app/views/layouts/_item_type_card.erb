<%= link_to show_item_types_path(:item_type => name) do %>
  <div class="col-sm-4 col-md-2 col-xs-6 col-lg-2">
    <div class="panel panel-default" style="border-color: light-grey !important;">
      <div class="panel-body">
       <% if local_assigns[:price] %>
         <div class="item-price">
           <span style="font-size:10px;">upto</span> <%= price %>
         </div>
       <% end %>
       <img src="/img/<%= picture %>" alt="" class="img-responsive item-image"> 
      </div>
      <div class="panel-footer center item-desc"> <%= name.capitalize! %> </div>
    </div>
  </div>
<% end %>